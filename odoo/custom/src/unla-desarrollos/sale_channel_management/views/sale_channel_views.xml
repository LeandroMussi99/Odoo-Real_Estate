<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_sale_channel_tree" model="ir.ui.view">
            <field name="name">sale.channel.tree</field>
            <field name="model">sale.channel</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="warehouse_id"/>
                    <field name="journal_id"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_sale_channel_form" model="ir.ui.view">
            <field name="name">sale.channel.form</field>
            <field name="model">sale.channel</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="code" required="1"/>
                            </group>
                            <group>
                                <field name="warehouse_id"/>
                                <field name="journal_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_sale_channel_search" model="ir.ui.view">
            <field name="name">sale.channel.search</field>
            <field name="model">sale.channel</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                    <filter string="Activos" name="active" domain="[]"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_sale_channel" model="ir.actions.act_window">
            <field name="name">Canales de Venta</field>
            <field name="res_model">sale.channel</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer canal de venta
                </p>
            </field>
        </record>

        <!-- MenÃº -->
        <menuitem 
            id="menu_sale_channel" 
            name="Canales de Venta" 
            parent="sale.menu_sale_config"
            action="action_sale_channel"
            sequence="10"/>

        <!-- Herencia de la orden de venta para agregar el canal -->
        <record id="view_order_form_inherit_sale_channel" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.sale.channel</field>
            <field name="model">sale.order</field>
            <!-- vista original de Odoo -->
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- lo ponemos debajo del cliente -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="sale_channel_id" required="1"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>