<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- Punto 12 -->
    <!-- Vista lista de ofertas -->
    <record id="view_estate_property_offer_list" model="ir.ui.view">
      <field name="name">estate.property.offer.list</field>
      <field name="model">estate.property.offer</field>
      <field name="arch" type="xml">
        <list string="Ofertas">
          <field name="price"/>
          <field name="partner_id"/>
          <field name="status"/>
          <field name="property_type"/>
          <field name="date_deadline"/>

          <!-- Mostrar botón Aceptar sólo si NO está accepted/refused -->
          <button name="action_accept_offer"
                  string="Aceptar"
                  type="object"
                  class="btn-success"
                  invisible="['in', status, ['accepted','refused']]"/>
        </list>
      </field>
    </record>

    <!-- Vista formulario de ofertas -->
    <record id="view_estate_property_offer_form" model="ir.ui.view">
      <field name="name">estate.property.offer.form</field>
      <field name="model">estate.property.offer</field>
      <field name="arch" type="xml">
        <form string="Oferta">
          <sheet>
            <group>
              <field name="price"/>
              <field name="partner_id"/>
              <field name="status"/>
              <field name="property_id"/>
              <field name="property_type"/>
              <field name="date_deadline"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Acción y menú para acceder a todas las ofertas -->
    <record id="action_estate_property_offer" model="ir.actions.act_window">
      <field name="name">Ofertas</field>
      <field name="res_model">estate.property.offer</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_estate_property_offer_root" name="Ofertas" sequence="10"/>
    <menuitem id="menu_estate_property_offer"
              name="Todas las Ofertas"
              parent="menu_estate_property_offer_root"
              action="action_estate_property_offer"
              sequence="1"/>
  </data>
</odoo>
